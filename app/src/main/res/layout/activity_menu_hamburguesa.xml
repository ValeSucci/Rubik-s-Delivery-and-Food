    <ListView
        android:id="@+id/lstHamburguesas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/tlbVerOrdenH" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tlbVerOrdenH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/lblPrecioTotalH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btnimgAnadirPedidoH" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnimgAnadirPedidoH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tlbVerOrdenH"
        android:layout_alignEnd="@+id/tlbVerOrdenH"
        android:layout_marginEnd="13dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/rubik2" />

    <TextView
        android:id="@+id/lblVerOrdenH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Orden"
        android:textSize="28sp"
        android:padding="2dp"
        android:textColor="@color/colorWhite"
        android:layout_alignStart="@+id/tlbVerOrdenH"
        android:layout_alignBottom="@+id/lblPrecioTotalH"
        android:layout_marginStart="40dp" />
</RelativeLayout>
